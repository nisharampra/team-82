<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Notes</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/milligram@1.4.1/dist/milligram.min.css">
</head>
<body>
    <div class="container">
        <h1>Your Notes</h1>
        <a href="/notes/new">Add New Note</a>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% notes.forEach(note => { %>
                    <tr>
                        <td><%= note.title %></td>
                        <td><%= note.content %></td>
                        <td>
                            <form action="/notes/delete/<%= note.id %>" method="POST" style="display: inline;">
                                <button type="submit">Remove</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <a href="/home">Back to Home</a>
    </div>
</body>
</html>
